<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/colorYellowMain</item>
        <item name="colorPrimary">@color/colorRedAccent</item>

    </style>

    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorBlueAccent</item>

    </style>

    <style name="style_detailedfragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
