<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_detailedfragment"
    android:background="@drawable/detailedfragment_background"
    tools:context=".Fragment.DetailedFragment">


    <TextView
        android:id="@+id/detailedfragment_restaurantname"
        android:layout_width="368dp"
        android:layout_height="132dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:textColor="@color/colorRedAccent"
        android:textSize="66sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailedfragment_deliverytoggle"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/detailedfragment_deliverytoggle"
        app:layout_constraintEnd_toEndOf="@+id/detailedfragment_restaurantpicture"
        app:layout_constraintStart_toEndOf="@id/detailedfragment_restaurantname"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailedfragment_restaurantpicture"
        android:layout_width="402dp"
        android:layout_height="276dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/restaurant_picture"
        android:src="@drawable/front"
        app:layout_constraintBottom_toTopOf="@+id/detailedfragment_restaurantaddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedfragment_restaurantname"
        app:layout_constraintVertical_bias="0.164"
        tools:src="@tools:sample/avatars" />

    <TextView

        android:id="@+id/detailedfragment_contactinfo"
        android:layout_width="388dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:text="@string/phone_number"

        android:textSize="33sp"
        app:layout_constraintBottom_toTopOf="@+id/detailedfragment_restaurantaddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailedfragment_restaurantpicture" />


    <TextView
        android:id="@+id/detailedfragment_restaurantaddress"
        android:layout_width="408dp"
        android:layout_height="56dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:text="Address"
        android:textColor="@color/colorRedMain"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/detailedfragment_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailedfragment_restaurantaddress" />


</android.support.constraint.ConstraintLayout>