<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_detailedfragment"
    android:background="@drawable/detailedfragment_background"
    tools:context=".Fragment.DetailedFragment">


    <TextView
        android:id="@+id/detailedfragment_restaurantname"
        android:layout_width="376dp"
        android:layout_height="156dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="66sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailedfragment_restaurantpicture"
        android:layout_width="385dp"
        android:layout_height="323dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/restaurant_picture"
        android:src="@drawable/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedfragment_restaurantname"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/detailedfragment_restaurantaddress"
        android:layout_width="385dp"
        android:layout_height="63dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:textColor="@color/colorRedMain"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/detailedfragment_contactinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/detailedfragment_contactinfo"
        android:layout_width="357dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/orange_juice_2_"
        android:gravity="center"
        android:text="@string/phone_number"
        android:textColor="@color/colorWhite"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/detailedfragment_ratingbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/detailedfragment_ratingbar"
        android:layout_width="318dp"
        android:layout_height="60dp"

        android:isIndicator="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>